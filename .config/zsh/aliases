alias pacman='pacman --color=auto'
alias ls='grc ls --color=always -FC' # im not sad for u anyway, grc <3.
alias l='ls -lhA'
alias yay='yay --color=auto'
alias grep='grep --color=auto'
alias cp='cp -iv'
alias mv='mv -iv'
alias curl=curlie # why curl when curlie around?
alias py=python
alias L=less
alias nmcli='nmcli -a'
#alias ip='ip -c=auto' # grc <3
alias df='df -hT'
alias cl='xclip -o'
alias clc='xclip -o -sel clip'
alias b64=base64
alias b64d='b64 -d'

