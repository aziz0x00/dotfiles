# aliases list

#alias pacman='pacman --color=auto' done on /etc/pacman.conf
alias ls='grc ls --color=always -FC' # im not sad for u anyway, grc <3.
alias l='ls -lhA'
alias yay='yay --color=auto'
alias grep='grep --color=auto'
alias cp='cp -iv'
alias mv='mv -iv'
alias py=python
alias L=less
#alias ip='ip -c=auto' # grc <3
alias df='df -hT'
alias cl='xclip -o'
alias clc='xclip -o -sel clip'
alias b64=base64
alias b64d='b64 -d'
alias nc='ncat'
#alias curl='curl -i --path-as-is' # not working with -q
curl () {
    /bin/curl $@ -i --path-as-is
}

